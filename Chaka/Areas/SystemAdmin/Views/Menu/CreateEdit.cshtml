@model Chaka.ViewModels.SystemAdmin.Menu.CreateEditViewModel

@using Kendo.Mvc.UI
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "addEditForm", name = "addEditForm" }))
{
    @Html.HiddenFor(m => m.ID)
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">Name INA</div>
            <div class="col-md-8">
                <input type="text" name="NameINA" class="form-control" value="@(Model.NameINA)" required="required" style="resize: none; width: 99%; padding: 2px 0;text-indent: .7em;">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">Name ENG</div>
            <div class="col-md-8">
                <input type="text" name="NameENG" class="form-control" value="@(Model.NameENG)" required="required" style="resize: none; width: 99%; padding: 2px 0;text-indent: .7em;">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">@Html.LabelFor(m => m.Description)</div>
            <div class="col-md-8">
                @Html.EditorFor(m => m.Description, "Description")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-7">
                <button type="submit" id="btnSave" name="btnSave" class="btn btn-primary">Save</button>
                <button type="button" id="btnClose" name="btnClose" class="btn btn-primary">Close</button>
            </div>
        </div>
    </div>
}

<script>
    $(function () {
        $("#btnClose").click(popup.closeClick);
        $("#btnSave").click(popup.saveClick);
    });
</script>